<%# <h1>Login</h1>%>
<div class="jumbotron">
  <h1>Login</h1>
  <% if (locals.message) { %>
    <p><%= message %></p>
    <% } %>


    <form class="form-horizontal" method="POST" action="/login">
      <fieldset>
        <legend></legend>
        <div class="form-group">
          <label for="inputEmail" class="col-lg-5 control-label">Email</label>
          <div class="col-lg-2">
            <input type="text" class="form-control" name="email" id="inputEmail" placeholder="">
          </div>
        </div>
        <div class="form-group">
          <label for="inputPassword" class="col-lg-5 control-label">Password</label>
          <div class="col-lg-2">
            <input type="password" class="form-control" name="password" id="inputPassword" placeholder="">
            <br>
            <br>

            <div class="form-group">
              <div class="col-lg-8 col-lg-offset-4">

                <button class="btn btn-primary">Login</button>
              </div>
            </div>
          </fieldset>
        </form>

</div>
