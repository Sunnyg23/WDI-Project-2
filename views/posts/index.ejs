<div class = "jumbotron">
<div class="container">
  <h1>Videos</h1>

  <ul class="row">
    <% posts.forEach(post => { %>
      <li class="col-lg-4 col-md-6 col-sm-12">
        <div>
          <iframe width="100%" height="200" src="https://www.youtube.com/embed/<%= post.youtubeId %>?rel=0&amp;controls=0&amp;showinfo=0" frameborder="0" allowfullscreen></iframe>
          <div class="post-info">
            <img src="<%= post.user.profilepic %>" width="50">
            <a href="/posts/<%= post._id %>"><h3><%= post.name %></h3><a>
            <p>Added by <a href="/users/<%= post.user._id %>"><%= post.user.username %></a></p>
            <ul>
              <li>View</li>
              <li>Favourite</li>
              <li>Follow</li>
            </ul>
          </div>
        </div>
      </li>
    <% }); %>
    </ul>
</div>
</div>
